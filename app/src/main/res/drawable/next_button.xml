<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">


        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            >
            // to control the color
            <gradient
                android:startColor="@color/Safaf"
                android:endColor="@color/Safaf"
                android:angle="0"/>

            //تحدب الشكل الاطراف
            <corners  android:radius="30dp"/>

            // كم تبعد الكلام بداخل الشكل عن كل زاويه
            <padding
                android:bottom="5pt"
                android:left="6pt"
                android:right="10pt"
                android:top="8pt"/>

            //الحافه بتاعه الشكل لون مختلف عن الشكل
            <stroke  android:color="@color/Gray" android:width="3dp"/>


        </shape>
    </item>
    <item android:state_pressed="false">



        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            >
            // to control the color
            <gradient
                android:startColor="@color/Safaf"
                android:endColor="@color/Safaf"
                android:angle="0"/>

            //تحدب الشكل الاطراف
            <corners  android:radius="30dp"/>

            // كم تبعد الكلام بداخل الشكل عن كل زاويه
            <padding
                android:bottom="5pt"
                android:left="6pt"
                android:right="10pt"
                android:top="8pt"/>


            //الحافه بتاعه الشكل لون مختلف عن الشكل
            <stroke  android:color="@color/Broun" android:width="2dp"/>


        </shape>

    </item>
</selector>