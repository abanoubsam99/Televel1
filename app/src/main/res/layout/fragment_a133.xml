<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Al7an.A133"
    tools:layout_editor_absoluteY="25dp">


    <Spinner

        android:id="@+id/spinner_A133"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/shafaf22"
        android:padding="5dp"
        android:textAlignment="center"
        android:textDirection="rtl"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="6dp"        android:entries="@array/A133"

        app:layout_constraintBottom_toTopOf="@+id/seekBar_A133"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/seekBar_A133"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timestart_133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:0"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"

            />

        <SeekBar

            android:id="@+id/seekBar_A133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/timeend_133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:0"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:gravity="center"

            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layoutDirection="ltr"

            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/puse_A133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/bt"
                android:clickable="true"
                android:src="@android:drawable/ic_media_pause"
                app:backgroundTint="@color/Safaf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_A133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"

                android:backgroundTint="@color/bt"
                android:clickable="true"
                android:src="@android:drawable/ic_media_play"
                app:backgroundTint="@color/Safaf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/puse_A133" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_A133"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puse_A133">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/COPTIC_A133"
                style="@style/Coptic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin=".8dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/Ca_A133"
                style="@style/CopticArab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin=".8dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/ARAB_A133"
                style="@style/Arabic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin=".8dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9066719717930706/6501654669"
        />
</LinearLayout>